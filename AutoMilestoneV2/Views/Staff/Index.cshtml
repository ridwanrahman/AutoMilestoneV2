
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StaffLayout.cshtml";
}
<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" />

<h2>This is staff dashboard</h2>

<div class="container table-responsive">

    <table id="dtBasicExample" class="table table-striped table-bordered">

        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">User Id</th>
                <th scope="col">Email</th>
                <th scope="col">Customer booking id</th>
                <th scope="col">From Date</th>
                <th scope="col">To Date</th>
                <th scope="col">Vehicle </th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var data in ViewBag.itemData)
            {
                <tr>
                    <th scope="row">1</th>
                    <td>@data.Id</td>
                    <td>@data.Email</td>
                    <td>@data.customer_booking_id</td>
                    <td>@data.from_date</td>
                    <td>@data.to_date</td>
                    <td>@data.vehicle_id</td>
                    <td><a href="/staff/ShowDetails?query=@data.Id&query2=@data.customer_booking_id">View Details</a></td>

                </tr>
            }

        </tbody>
    </table>

    <button type="button" onclick="location.href='/staff/deletelocations'" class="btn">Delete all Locations</button>
    <button type="button" class="btn">Delete all bookings</button>


</div>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")



@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#dtBasicExample").DataTable();
        });
    </script>

}


